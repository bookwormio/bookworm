{
  "expo": {
    "name": "bookworm.io",
    "slug": "bookworm",
    "scheme": "bookworm.io",
    "owner": "bookwormio",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/bookworm-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/bookworm-splash-screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/bookworm-adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.rilescode.BookWorm"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow bookworm.io to access your camera to scan books."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow bookworm.io to access your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7d65960e-a8fb-46ff-8df9-2e57a6226322"
      }
    },
    "ios": {
      "bundleIdentifier": "com.rilescode.BookWorm",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan a book's barcode.",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to access images the user would like to post."
      }
    }
  }
}
